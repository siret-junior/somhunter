{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": ["error", { "code": 120 }],
        "quotes": [2, "double", { "avoidEscape": false }],
        "require-jsdoc" : 0
    }
}